<div class="row white">
  <div class="large-5 columns border">
    <h2 class="center">User Profile</h2>
    <%= image_tag(current_user.profile_pic, size: "200x100", :class=> "imgcenter") %>
    <br>
    <br>
    <br>
    <h6></h6>
  </div>
  <div class="large-7 columns white border">
    <% if current_user.goal? && current_user.deadline? %>
      <h3>
        Goal Weight: <%= current_user.goal %>lbs<%= link_to("change", { controller: :users, action: :destroy }, { method: :delete })%>
      </h3>
      <h3>

        Deadline: <%= current_user.deadline %> <%= link_to("change", { controller: :users, action: "destroy" }, { method: :delete })%>
      </h3>
    <% else %>
      <%= form_for @user do |f| %>
        <%= f.text_field :goal, value: "", placeholder: "Update Goal", class: "fontsize" %> 
        <%= f.text_field :deadline, value: "", placeholder: "Update Deadline", class: "fontsize" %>
        <%= f.submit "Goal & Deadline", class: "button radius" %>
      <% end %>
    <% end %>
    <div class="has-form row">
      <div class="large-7 columns">
          <%= form_for [@user, @weight] do |f| %>
            <%= f.text_field :pounds, value: "", placeholder: "???lbs", class: "fontsize" %> <%= f.file_field :pic, class: "button radius" %>
            <%= f.submit "Update Weight", class: "button radius" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
